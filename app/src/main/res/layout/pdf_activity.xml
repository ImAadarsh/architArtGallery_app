                            android:textColor="@color/black"
                            android:textSize="8sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:text="₹ 1800"
                            android:textColor="@color/black"
                            android:textSize="8sp"
